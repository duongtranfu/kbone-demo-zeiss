.icon-list {
  /* width: 100%; */
  display: grid;
  grid-template-columns: auto auto;
}

.circle-number {
  color: white;
  font-size: 0.5rem;
}

.circle-number-contain {
  width: 12px;
  height: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100px;
  background-color: #bbc7dd;
}

.icon-info-title-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 0.8rem;
}

.icon-info-title {
  font-size: 0.6rem;
  margin-left: 0.5rem;
}

.icon-list-content {
  display: flex;
  padding-bottom: 1rem;
  justify-content: space-evenly;
}

