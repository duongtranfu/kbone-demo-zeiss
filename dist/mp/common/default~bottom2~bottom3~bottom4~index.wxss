.single-icon {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.single-icon .h5-img {
  width: 20px;
  height: 20px;
  margin-bottom: 15px;
}

.single-middle-icon .h5-img {
  margin-top: 3px;
  width: 15px;
}

.tabBar {
  display: inline-flex;
  justify-content: center;
  width: 50%;
}

.tabBar-container {
  border-bottom: 1px solid #f7f7f7;
  margin-bottom: 20px;
  margin-top: 20px;
  display: flex;
}
.tabBar-text {
  padding-bottom: 5px;
  text-align: center;
}
.selected.tabBar-text {
  color: rgb(25, 25, 255);
}

.tabBar-text:after {
  display: block;
  content: '';
  padding: 0 6px 6px 6px;
  transform: scale(0, 1.2);
  transition: transform 200ms;
  border-bottom: solid 1px rgb(25, 25, 255);
}

.selected.tabBar-text:after {
  transform: scale(1, 1.2);
  transition: transform 200ms;
}

.seachContain {
  margin-bottom: 15px;
  display: flex;
  align-items: center;
  width: calc(100% + 46.26px);
  transition: all 0.3s linear;
}

.icon-small {
  padding-left: 20px;
}

.seach-logo {
  width: 30px;
  margin-right: 10px;
}

.input-container {
  border-radius: 20px;
  background-color: #f7f7f7;
  padding: 2px 0;
  flex-grow: 1;
  display: flex;
  position: relative;
  height: 25px;
}

.input-container-wrapper {
  display: flex;
  align-items: center;
  transition: all 0.3s linear;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.input-container .h5-input {
  width: 120px;
  background-color: #f7f7f7;
  line-height: 10px;
  display: inline-block;
  margin-left: 10px;
}

.search-button {
  margin: 0 10px 0 20px;
  color: blue;
}

.on-focus.seachContain {
  width: 100%;
  transition: all 0.3s linear;
}

.on-focus.seachContain .input-container-wrapper {
  left: 0;
  transform: translate(0, -50%);
  transition: all 0.3s linear;
}
